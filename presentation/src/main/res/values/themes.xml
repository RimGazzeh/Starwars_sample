<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StarWars" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grey_EBEBEB</item>
        <item name="colorPrimaryVariant">@color/grey_EBEBEB_tr50</item>
        <item name="colorOnPrimary">@color/black_161615</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow_FFC107</item>
        <item name="colorSecondaryVariant">@color/orange_bf3200</item>
        <item name="colorOnSecondary">@color/black_161615</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Color Surface -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">?attr/colorOnPrimary</item>
        <item name="colorError">?attr/colorSecondaryVariant</item>
        <!-- Shapes -->
        <item name="materialCardViewStyle">@style/Widget.App.CardView</item>
    </style>
</resources>